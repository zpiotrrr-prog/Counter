<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Counter.ViewModels"
             x:Class="Counter.Views.MainPage"
             Title="Counters">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- Dodawanie nowego licznika -->
            <Entry Placeholder="Counter name"
                   Text="{Binding NewCounterName}" />
            <Entry Placeholder="Initial value"
                   Text="{Binding NewCounterInitialValue}"
                   Keyboard="Numeric" />
            <Button Text="Add Counter"
                    Command="{Binding AddCounterCommand}" />

            <!-- Lista liczników -->
            <CollectionView ItemsSource="{Binding Counters}">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="viewmodels:CounterViewModel">
                        <Frame Padding="10" BackgroundColor="LightGray" Margin="0,5">
                            <VerticalStackLayout>
                                <Label Text="{Binding Name}" 
                                       FontSize="18"
                                       HorizontalOptions="Center" />
                                <Label Text="{Binding Value}" 
                                       FontSize="24"
                                       HorizontalOptions="Center" />
                                <HorizontalStackLayout HorizontalOptions="Center">
                                    <Button Text="-" Command="{Binding DecrementCommand}" />
                                    <Button Text="+" Command="{Binding IncrementCommand}" />
                                </HorizontalStackLayout>
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
